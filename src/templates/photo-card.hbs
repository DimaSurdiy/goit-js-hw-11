{{#each this}}
  <a href="{{largeImageURL}}">
    <div class="photo-card">
    <div class="img-thumb">
      <img class="photo-card__image" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" />
    </div>
    <div class="info">
      <p class="info-item">
        <b>Likes: {{likes}}</b>
      </p>
      <p class="info-item">
        <b>Views: {{views}}</b>
      </p>
      <p class="info-item">
        <b>Comments: {{comments}}</b>
      </p>
      <p class="info-item">
        <b>Downloads: {{downloads}}</b>
      </p>
    </div>
  </div>
  </a>
{{/each}}